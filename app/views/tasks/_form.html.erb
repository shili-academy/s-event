<%= form_for [@event, task], remote: true do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "name", required: true %>
    </div>
    <div class="col-md-2">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, options_for_select(Task.statuses.keys, task.status),  { },
        class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :progress, class: "form-label" %>
      <%= f.range_field :progress, value: task.progress,  in: 0..100, step: 0.1, 
        oninput: "this.nextElementSibling.value = this.value", 
        class: "form-range" %>
      <output><%= task.progress %></output>%
    </div>
    <div class="col-md-12 my-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control",
      rows: 6, required: true %>
    </div>
    <div class="col-md-3">
      <%= f.label :start_time, class: "form-label" %>
      <%= f.datetime_field :start_time, class: "form-control",
        placeholder: "name", required: true %>
    </div>
    <div class="col-md-3">
      <%= f.label :end_time, class: "form-label" %>
      <%= f.datetime_field :end_time, class: "form-control",
        placeholder: "name", required: true %>
    </div>
    <div class="col-md-3">
      <%= f.label :estimated_costs, class: "form-label" %>
      <%= f.number_field :estimated_costs, class: "form-control",
        placeholder: "name", required: true %>
    </div>
    <div class="col-md-3">
      <%= f.label :actual_costs, class: "form-label" %>
      <%= f.number_field :actual_costs, class: "form-control",
        placeholder: "name", required: true %>
    </div>
    <div class="col-md-3 my-3">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image, accept:'image/*', class: "form-control" %>
    </div>
    <%= f.hidden_field :event_id, {value: @event.id} %>
    <div class="my-4">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
